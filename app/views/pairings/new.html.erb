<!-- Validation failure messages -->
<% if @pairing.errors.any? %>
  <% @pairing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Pairing</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_pairing" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cigar_id -->
      <div class="form-group">
        <label for="cigar_id" class="control-label">
          Cigar
        </label>

        <input type="text" id="cigar_id" name="cigar_id" placeholder="Cigar" class="form-control" value="<%= @pairing.cigar_id %>">
      </div>

      <!-- Label and input for bottle_id -->
      <div class="form-group">
        <label for="bottle_id" class="control-label">
          Bottle
        </label>

        <input type="text" id="bottle_id" name="bottle_id" placeholder="Bottle" class="form-control" value="<%= @pairing.bottle_id %>">
      </div>

      <button class="btn btn-success">
        Create Pairing
      </button>
      or
      <a href="/pairings">Cancel</a>
    </form>
  </div>
</div>
