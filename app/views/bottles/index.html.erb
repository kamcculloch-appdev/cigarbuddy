<div class="page-header">
  <h1>
    Bottles
    <a href="/bottles/new" class="btn btn-lg btn-success">New Bottle</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bottles_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Alcohol Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='alcoholgteqcreated_atPicker'>
                  <%= f.text_field :alcohol_created_at_gteq, :class => "form-control", :placeholder => "Alcohol Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='alcohollteqcreated_atPicker'>
                  <%= f.text_field :alcohol_created_at_lteq, :class => "form-control", :placeholder => "Alcohol Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#alcoholgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#alcohollteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#alcoholgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#alcohollteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#alcohollteqcreated_atPicker').on("dp.change", function (e) {
                  $('#alcoholgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Cigar Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='cigarsgteqcreated_atPicker'>
                  <%= f.text_field :cigars_created_at_gteq, :class => "form-control", :placeholder => "Cigar Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='cigarslteqcreated_atPicker'>
                  <%= f.text_field :cigars_created_at_lteq, :class => "form-control", :placeholder => "Cigar Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#cigarsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#cigarslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#cigarsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#cigarslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#cigarslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#cigarsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bottles" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bottles_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Alcohol</th>
        <th>Actions</th>
      </tr>

      <% @bottles.each do |bottle| %>
      <tr>
        <td>
          <% if bottle.alcohol.present? %>
            <a href="/alcohols/<%= bottle.alcohol.id %>">
              <%= bottle.alcohol.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/bottles/<%= bottle.id %>" class="btn btn-primary">Show</a>
          <a href="/bottles/<%= bottle.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bottle/<%= bottle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bottles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
