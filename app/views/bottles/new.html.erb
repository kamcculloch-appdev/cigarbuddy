<!-- Validation failure messages -->
<% if @bottle.errors.any? %>
  <% @bottle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bottle</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bottle" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for alcohol_id -->
      <div class="form-group">
        <label for="alcohol_id" class="control-label">
          Alcohol
        </label>

        <input type="text" id="alcohol_id" name="alcohol_id" placeholder="Alcohol" class="form-control" value="<%= @bottle.alcohol_id %>">
      </div>

      <button class="btn btn-success">
        Create Bottle
      </button>
      or
      <a href="/bottles">Cancel</a>
    </form>
  </div>
</div>
