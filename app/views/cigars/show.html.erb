<div class="page-header">
  <h3>Cigar #<%= @cigar.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cigars" class="btn btn-primary">
        Back
      </a>
      <a href="/cigars/<%= @cigar.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cigar/<%= @cigar.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Cigar has many pairings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Pairings
      </li>

      <% @cigar.pairings.each do |pairing| %>
        <li class="list-group-item">
          <a href="/pairings/<%= pairing.id %>">
            <%= pairing.cigar_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/pairings/<%= pairing.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/pairings/<%= pairing.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_pairing/<%= pairing.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Cigar has many bottles -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bottles
      </li>

      <% @cigar.bottles.each do |bottle| %>
        <li class="list-group-item">
          <a href="/bottles/<%= bottle.id %>">
            <%= bottle.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/bottles/<%= bottle.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/bottles/<%= bottle.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_bottle/<%= bottle.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
